&НаКлиенте
Процедура СоздатьЗадачуВJIRA(Письмо)
	
	//автор задачи - отправитель письма
	//исполнитель задачи - второй получатель письма после робота
	//заголовок задачи - тема письма после тэга
	//остальные данные получаются из тела письма по первой строке, если она начинается с #
	//Позиции параметров в строке:
	//#DueDate#EpicLink#IssueType(name)#OriginalEstimate#Priority#Components (через ; )
	//После этой строки идет Description
	
	
	ТекстПисьма = ПреобразоватьТекстизХТМЛФорматаВПростой(Письмо.Тексты[0].Текст);
	
	МассивПараметров = РазложитьСтрокуВМассивПодстрок(ТекстПисьма,"#");
	
	Если МассивПараметров.Количество()>8 Тогда
		ПарамЗапросJira.DueDate = МассивПараметров[1];
		EpicLink = ПолучитьЭпикЛинк(МассивПараметров[2]);
		ПарамЗапросJira.EpicLink = ?(EpicLink = "", неопределено, EpicLink);
		ПарамЗапросJira.IssueType_Name = МассивПараметров[3];
		ПарамЗапросJira.OriginalEstimate = ?(МассивПараметров[4]="",4,Число(МассивПараметров[4]));
		ПарамЗапросJira.Priority_Name = ?(МассивПараметров[5] = "", "Важный", МассивПараметров[5]);
		МассивКомпонент = РазложитьСтрокуВМассивПодстрок(МассивПараметров[6],";");
		Компоненты = Новый СписокЗначений;
		Для каждого Значение из МассивКомпонент Цикл
			Компоненты.Добавить(СтрЗаменить(Значение,Символ(13)+Символ(10),""));
		КонецЦикла;
		
		ПроверитьКомпоненты(Компоненты);
		
		ПарамЗапросJira.Components = Компоненты;
		Description = "";
		Для н = 7 по МассивПараметров.Количество()-1 Цикл
			Description = Description+""+МассивПараметров[н];
		КонецЦикла;
	Иначе
		Почта_СписокСобытий.ВставитьСтроку(1,""+ТекущаяДата()+" "+"Получено письмо с некорректной параметрической строкой, задача создана не будет");
		ОтправитьПочту(Письмо.Тема,"<P>Присланное письмо не содержит параметрической строки, либо она некорректна.<br>
									| Ознакомьтесь с правилами составления письма для создания задачи по ссылке: <br>
									| <a href= https://conf.ibs.ru/pages/viewpage.action?pageId=67243091>
									|https://conf.ibs.ru/pages/viewpage.action?pageId=67243091</a><br><br>"
									,неопределено,Письмо.Отправитель);
		Возврат;
	КонецЕсли;
	
	ПарамЗапросJIra.Description = Description;
	
	ПарамЗапросJira.Created = Письмо.ДатаПолучения;
	ПарамЗапросJira.Status_Name = "Открыт";
	ПарамЗапросJira.ID = "";
	ПарамЗапросJira.Key = ""; 
	ПарамЗапросJira.Reporter_Name = Письмо.Отправитель.Пользователь;
	ПарамЗапросJira.Creator_Name = Письмо.Отправитель.Пользователь;
		
	Если Письмо.Получатели.Количество() = 1 и Письмо.Копии.Количество() = 0 Тогда //автор письма забыл указать исполнителя, поэтому будет делать свою задачу сам
		ПарамЗапросJira.Assignee_Name = Письмо.Отправитель.Пользователь;
	Иначе //исполнитель есть среди получателей письма и это не наш робот. Ищем пользователя jira среди получателей письма
		ПарамЗапросJira.Assignee_Name = ПолучитьИмяПользователя(Письмо);
	КонецЕсли;
	
	Если ПарамЗапросJira.IssueType_Name = "" Тогда
		ТипЗадачи = ПолучитьТипЗадачиПоПользователю(ПарамЗапросJira.Assignee_Name);
		ПарамЗапросJira.IssueType_Name = ТипЗадачи;
	КонецЕсли;
	
	Если ПарамЗапросJira.DueDate = "" Тогда
		ПарамЗапросJira.DueDate =  Письмо.ДатаПолучения+86400;
	КонецЕсли;
	
	ПарамЗапросJira.Summary = СтрЗаменить(Письмо.Тема,Лев(Письмо.Тема,5), ""); 
	
	
	ЭтаФорма["ПарамЗапросJira_Key"] = "";
	ПарамЗапросJira.ЗапросНовыйИзменить = 0;
	ЭтаФорма["ПарамЗапросJira_ЗапросНовыйИзменить"] = 0;
	
	ЗаполнитьДанныеФормыЗапрос();
		
	Отказ = ложь;
	ДопПарам = Новый Структура;
	СоздатьОбновитьЗапросОбработка(ДопПарам,Отказ);
	Если не Отказ Тогда
		Почта_СписокСобытий.ВставитьСтроку(1,""+ТекущаяДата()+" Создана задача №"+ПарамЗапросJira.key+" по запросу "+Письмо.Отправитель.ОтображаемоеИмя);
		СсылкаBrowse = ПарамСерверJira.JiraСерверПротокол+ПарамСерверJira.JiraСерверHost+"/browse/"+ПарамЗапросJira.key;
		ОтправитьПочту(Письмо.Тема, "<P>Создана задача <a href= """+СсылкаBrowse+""">"+ПарамЗапросJira.key+"</a> по вашему запросу<br>",неопределено, Письмо.Отправитель);
	Иначе
		Если ДопПарам.Свойство("ОписаниеОшибки") Тогда
			Почта_СписокСобытий.ВставитьСтроку(1,""+ТекущаяДата()+" "+ДопПарам.ОписаниеОшибки);
			ОтправитьПочту(Письмо.Тема,"<P>Не удалось создать задачу по причине<br><br>"+ДопПарам.ОписаниеОшибки+"<br>",неопределено,Письмо.Отправитель);
		Иначе
		    Почта_СписокСобытий.ВставитьСтроку(1, ""+ТекущаяДата()+" Неопознанная ошибка, см ЖР");
		КонецЕсли;
	КонецЕсли;
	
КонецПроцедуры


