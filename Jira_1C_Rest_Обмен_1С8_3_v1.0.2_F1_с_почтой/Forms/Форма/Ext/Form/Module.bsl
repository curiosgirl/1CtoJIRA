		Длительность = 0;
	КонецЕсли;
	
	Если Окр(Длительность,3) = 0 Тогда 
		Возврат "0m";
	КонецЕсли;	
	
	Час = Цел(Длительность);
	Мин = (Длительность - Час) * 60;
	
	Стр = Формат(Час, "ЧН=0; ЧВН=; ЧГ=0") + "h";
