&НаКлиенте
Функция ПолучитьЭпикЛинк(СтрокаЭпика)
	СтрокаЭпика = СокрЛП(СтрокаЭпика);
	Если не ЗначениеЗаполнено(СтрокаЭпика) Тогда //пустая строка, в запросе не задан эпик
		Возврат "";
	КонецЕсли;
	
	ПарамСписокЗапросовJira.ЗапросJQL = "IssueType='Epic'";
	ЗаполнитьСписокЗапросовОбработка();
	Если СтрНачинаетсяС(СокрЛП(СтрокаЭпика),"DEV") Тогда //В запросе задан ID эпика проверяем, действительно ли это эпик
		СтрокиСЗадачей = Объект.JiraСписокЗапросов.НайтиСтроки(Новый Структура("Key",СтрокаЭпика));
		Если СтрокиСЗадачей.Количество()>0 Тогда
			Возврат СтрокиСЗадачей[0].Key;
		Иначе //нет такого эпика, он не будет установлен
			Возврат "";
		КонецЕсли;
	КонецЕсли;
	
	//в поле ЭпикЛинк запроса введено какое-то значение, найдем его в полученном списке эпиков
	МассивСтрок = Новый Массив;
	Для Каждого СтрокаТЗ из Объект.JiraСписокЗапросов Цикл
		Если СтрНайти(ВРЕГ(СтрокаТЗ.EpicName),ВРЕГ(СтрокаЭпика))>0 Тогда
			МассивСтрок.Добавить(СтрокаТЗ);
		КонецЕсли;
	КонецЦикла;
	Если МассивСтрок.Количество()=0 Тогда //не найдено эпиков по заданному слову
		Возврат "";
	ИначеЕсли МассивСтрок.Количество()>1 Тогда //по ключевому слову найдено больше одного эпика
		Возврат "";
	Иначе //найден единственный эпик, возвращаем его ключ для установки в задачу				
		Возврат МассивСтрок[0].Кey;
	КонецЕсли;
				
КонецФункции

